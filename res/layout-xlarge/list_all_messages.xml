<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_gravity="center"
    android:layout_height="wrap_content" android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txvAllMsgTitle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#f3f4f6"
        android:gravity="center"
        android:text="@string/str_all_messages"
        android:textColor="#5a5856"
        android:textSize="35sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dddfdf" />

    <ListView
        android:id="@+id/lsvAllMessageList"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#ffffff"
        android:divider="#dddfdf"
        android:dividerHeight="1dp" >
    </ListView>

    <Button
        android:id="@+id/btnAllMessageCancel"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/set_share_via_other_apps"
        android:text="@string/str_cancel"
        android:textAllCaps="false" android:layout_marginTop="20dp"
        android:textColor="#ffffff" android:layout_marginBottom="20dp"
        android:textSize="32sp"
        android:visibility="visible" />

</LinearLayout>