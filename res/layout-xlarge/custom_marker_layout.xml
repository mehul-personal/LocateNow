<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_marker_info_windo"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imvProfileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_weight="2" android:padding="5dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/no_image_profile" />

        <TextView
            android:id="@+id/txvProfileName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:gravity="center" android:textSize="28sp"
            android:text="mehul patel" android:textStyle="bold"
            android:textColor="#5e6766" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="270dp"
        android:layout_height="90dp" >

        <ImageView
            android:id="@+id/base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_map_marker" />
    </FrameLayout>

</LinearLayout>