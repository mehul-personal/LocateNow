<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_image"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/ic_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="180dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="10dp"
            android:src="@drawable/ic_left_line" />

        <TextView
            android:id="@+id/txvLocateHeading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="@string/str_cap_locatenow"
            android:textColor="#ffffff"
            android:textSize="45sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_right_line" />
    </LinearLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/xlarge_white_roundcorner_style"
        android:text="@string/str_signin_into_your_account"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/xlarge_dark_green_roundcorner_style"
        android:text="@string/str_register_for_new_account"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="35sp" />

</LinearLayout>